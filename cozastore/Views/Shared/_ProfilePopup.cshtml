<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        min-height: 100vh;
        overflow: hidden;
        position: relative;
    }

    /* خلفية الموقع */
    .website-background {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: -1;
        border: none;
        pointer-events: none;
    }

    /* طبقة تظليل للخلفية لتحسين قراءة النص */
    .overlay {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: 0;
    }

    /* تنسيقات البروفايل */
    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        overflow-y: auto;
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 500px;
        padding: 30px;
        text-align: center;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        position: relative;
        margin: 40px 0;
        max-height: 90vh;
        overflow-y: auto;
    }

    /* زر الإغلاق */
    .close-btn {
        position: absolute;
        top: 15px;
        left: 15px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        font-size: 20px;
        color: #555;
    }

        .close-btn:hover {
            background: #ff4757;
            color: white;
            transform: rotate(90deg);
        }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #fff;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .profile-name {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 5px;
        color: #333;
    }

    .profile-username {
        color: #6c757d;
        margin-bottom: 20px;
        font-size: 16px;
    }

    .profile-info {
        text-align: right;
        margin-bottom: 25px;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #f1f1f1;
    }

        .info-item:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 600;
        color: #555;
    }

    .info-value {
        color: #333;
    }

    .quick-links {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        margin-bottom: 25px;
    }

    .quick-link {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px;
        background: #f8f9fa;
        border-radius: 10px;
        text-decoration: none;
        color: #555;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .quick-link:hover {
            background: #6c5ce7;
            color: white;
            transform: translateY(-3px);
        }

        .quick-link i {
            margin-left: 8px;
        }

    .btn-edit {
        background: #050a41;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        width: 100%;
        margin-bottom: 10px;
    }

        .btn-edit:hover {
            background: #5649c9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
        }

        .btn-edit i {
            margin-left: 8px;
        }

    /* محتوى إضافي لمحاكاة التمرير */
    .additional-content {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #f1f1f1;
    }

    .content-item {
        padding: 10px;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 10px;
        text-align: right;
    }

    /* تخصيص شريط التمرير */
    .profile-card::-webkit-scrollbar {
        width: 8px;
    }

    .profile-card::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
    }

    .profile-card::-webkit-scrollbar-thumb {
        background: #6c5ce7;
        border-radius: 4px;
    }

    /* تنسيقات للهاتف */

