@model OTPViewModel
@{
    Layout = null;
    ViewData["Title"] = "Verify OTP";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Verify OTP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg p-4 rounded-3">
                    <h3 class="text-center mb-4">Verify OTP</h3>

                    <!-- ✅ الفورم الأساسي لتأكيد الكود -->
                    <form asp-controller="Account" asp-action="VerifyCode" method="post">
                        <div class="form-group text-center mb-3">
                            <label for="OtpCode" class="form-label">Enter the verification code</label>

                            <div class="d-flex justify-content-center gap-2">
                                @for (int i = 0; i < 4; i++)
                                {
                                    <input type="text" maxlength="1"
                                           class="form-control text-center otp-input"
                                           style="width:50px; font-size:20px;"
                                           oninput="moveNext(this, @i)" />
                                }
                            </div>

                            <input type="hidden" asp-for="OtpCode" id="OtpCode" />
                            <input type="hidden" asp-for="Email" id="Email" />
                            <span asp-validation-for="OtpCode" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Confirm</button>
                    </form>

                    <!-- ✅ فورم إرسال OTP تاني -->
                    <div class="text-center mt-3">
                        <form asp-controller="Account" asp-action="SendVerificationCode" method="post">
                            <input type="hidden" asp-for="Email" id="Email" />
                            <button type="submit" class="btn btn-link p-0">Resend OTP</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        const inputs = document.querySelectorAll(".otp-input");
        const hiddenInput = document.getElementById("OtpCode");

        function moveNext(current, index) {
            if (current.value.length === 1 && index < inputs.length - 1) {
                inputs[index + 1].focus();
            }
            collectOtp();
        }

        function collectOtp() {
            let otp = "";
            inputs.forEach(inp => otp += inp.value);
            hiddenInput.value = otp;
        }
    </script>
</body>
</html>
