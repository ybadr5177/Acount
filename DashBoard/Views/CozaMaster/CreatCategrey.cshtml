@model CategoryViewModel
@{
    ViewData["Title"] = "CreatCategrey";
}


<h2 class="mt-4">Creat Categrey</h2>
<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
   
    <div class="row">
       @*  <div class="col-md-6">
           
            
        </div> *@
        <div class="card mb-4">
            <div class="card-body">

                <form class="custom-form" asp-action="CreatCategrey" asp-controller="CozaMaster" method="post" enctype="multipart/form-data">
                    <label for="Name" class="form-label"> Categrey Name</label>
                    <input type="text" class="form-control" id="Name_EN" name="Name_EN" placeholder="Type the Name here">

                    <label for="Name" class="form-label"> Categrey Name in Arabic</label>
                    <input type="text" class="form-control" id="Name_Ar" name="Name_Ar" placeholder="Type the Name here">

                    <label for="image" class="form-label">Choose an image</label>
                    <input type="file" class="form-control" id="PictureName" name="PictureName" accept="image/*">

                    <br />
                    <button class="btn btn-success d-grid w-100" type="submit">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->
